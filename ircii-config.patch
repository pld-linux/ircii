diff -urN ircii-4.4S.org/Makefile.in ircii-4.4S/Makefile.in
--- ircii-4.4S.org/Makefile.in	Fri Apr  7 15:00:32 2000
+++ ircii-4.4S/Makefile.in	Fri Apr  7 15:12:56 2000
@@ -67,10 +67,10 @@
 incdir = @srcdir@/include
 VPATH = @srcdir@/source
 objdir = @objdir@
-bindir = @bindir@
-datadir = @datadir@
-libdir = @libdir@
